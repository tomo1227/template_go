{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Go API Debug",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/api/main.go",
      "args": ["-port=8080"]
    },
    {
      "name": "Go Debug",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${fileDirname}",
      "cwd": "${fileDirname}",
      "args": ["-race"]
    }
  ]
}
