{
  "editor.formatOnSave": false,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.guides.bracketPairs": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.markdownlint": "explicit"
  },
  "editor.rulers": [120],
  "[go]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "golang.go",
    "editor.autoIndent": "advanced",
    "editor.codeActionsOnSave": {
      // gciを使う場合はneverにしなければならない
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    },
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },
  "go.useLanguageServer": true,
  "gopls": {
    "analyses": {
      "shadow": true
    },
    "ui.semanticTokens": true,
    "ui.completion.usePlaceholders": true,
    "hoverKind": "SynopsisDocumentation",
    "linkTarget": "pkg.go.dev",
    "completionDocumentation": true,
    "completeUnimported": true,
    "deepCompletion": true,
    "staticcheck": false
  },
  "go.languageServerFlags": ["-rpc.trace", "serve", "--debug=localhost:6060"],
  "go.trace.server": "verbose",
  "go.formatTool": "gofmt",
  "go.lintOnSave": "workspace",
  "go.lintTool": "golangci-lint",
  "go.toolsManagement.autoUpdate": true,
  "go.lintFlags": ["--config=${workspaceFolder}/.golangci.toml", "--fast"],
  "go.addTags": {
    "tags": "json,validate",
    "options": "json=omitempty,validate=omitempty",
    "promptForTags": false,
    "transform": "snakecase",
    "template": ""
  },
  "go.coverOnSave": true,
  "go.coverageDecorator": {
    "type": "gutter",
    "coveredGutterStyle": "blockgreen",
    "uncoveredGutterStyle": "blockred"
  },
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
    "editor.formatOnPaste": true,
    "editor.formatOnType": true
  },
  "markdownlint.run": "onSave",
  "markdownlint.config": {
    "MD010": false,
    "MD025": false,
    "MD033": false,
    "MD034": false
  },
  "markdown.extension.print.theme": "dark",
  "markdown.copyFiles.destination": {
    "**/*": "../media/img/img.${fileExtName}"
  },
  "markdown-preview-enhanced.codeBlockTheme": "solarized-light.css",
  "markdown.extension.toc.unorderedList.marker": "*",
  "markdown.extension.orderedList.marker": "one",
  "[jsonc][json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.autoIndent": "advanced",
    "files.insertFinalNewline": true
  },
  "json.schemaDownload.enable": true,
  "[yaml][dockercompose][github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "files.insertFinalNewline": true,
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    }
  },
  "yaml.format.enable": true,
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "files.insertFinalNewline": true
  },
  "cSpell.words": [
    "Codecov",
    "devcontainer",
    "devcontainers",
    "dockercompose",
    "Godoc",
    "gofiber",
    "gofmt",
    "gomod"
  ],
  "todo-tree.general.tags": [
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "REVIEW",
    "OPTIMIZE",
    "CHANGED",
    "NOTE",
    "WARNING"
  ],
  "todo-tree.highlights.defaultHighlight": {
    "foreground": "#000000",
    "background": "#2C7CFF",
    "iconColor": "#24ff41",
    "opacity": 45
  },
  "todo-tree.highlights.customHighlight": {
    "HACK": {
      "icon": "zap"
    },
    "FIXME": {
      "icon": "flame",
      "background": "#f11e1e",
      "iconColor": "#f11e1e"
    },
    "TODO": {
      "icon": "check-circle"
    },
    "XXX": {
      "icon": "x-circle",
      "background": "#f8831d",
      "iconColor": "#f8831d"
    },
    "REVIEW": {
      "icon": "pin"
    },
    "OPTIMIZE": {
      "icon": "rocket",
      "background": "#f8831d",
      "iconColor": "#f8831d"
    },
    "CHANGED": {
      "icon": "issue-reopened"
    },
    "NOTE": {
      "icon": "thumbsup"
    },
    "WARNING": {
      "icon": "alert",
      "background": "#f11e1e",
      "iconColor": "#f11e1e"
    }
  },
  "gitmoji.onlyUseCustomEmoji": true, // カスタマイズした絵文字のみ表示する
  "gitmoji.addCustomEmoji": [
    // 絵文字のカスタマイズ
    {
      "emoji": "🐛",
      "code": ":bug:",
      "description": "バグ修正 (fix)"
    },
    {
      "emoji": "👍",
      "code": ":+1:",
      "description": "機能改善 (fix/feat)"
    },
    {
      "emoji": "✨",
      "code": ":sparkles:",
      "description": "部分的な機能追加 (feat)"
    },
    {
      "emoji": "🎉",
      "code": ":tada:",
      "description": "盛大に祝うべき大きな機能追加 (feat)"
    },
    {
      "emoji": "🚀",
      "code": ":rocket:",
      "description": "パフォーマンス改善 (feat)"
    },
    {
      "emoji": "🔒",
      "code": ":lock:",
      "description": "新機能の公開範囲の制限 (feat)"
    },
    {
      "emoji": "👮",
      "code": ":cop:",
      "description": "セキュリティ関連の改善 (feat)"
    },
    {
      "emoji": "📚",
      "code": ":books:",
      "description": "ドキュメント修正 (docs)"
    },
    {
      "emoji": "👕",
      "code": ":shirt:",
      "description": "Lintエラーの修正やコードスタイルの修正 (style)"
    },
    {
      "emoji": "♻️",
      "code": ":recycle:",
      "description": "リファクタリング (refactor)"
    },
    {
      "emoji": "🚿",
      "code": ":shower:",
      "description": "不要な機能・使われなくなった機能の削除 (refactor)"
    },
    {
      "emoji": "📦",
      "code": ":package:",
      "description": "新規パッケージやライブラリの追加"
    },
    {
      "emoji": "💚",
      "code": ":green_heart:",
      "description": "テストやCIの修正・改善 (test)"
    },
    {
      "emoji": "👷",
      "code": ":construction_worker:",
      "description": "ビルドシステムや外部依存関係の変更"
    },
    {
      "emoji": "🔧",
      "code": ":wrench:",
      "description": "依存パッケージなどのアップデート (chore)"
    },
    {
      "emoji": "🌐",
      "code": ":globe_with_meridians:",
      "description": "i18n (国際化) 関連の変更"
    },
    {
      "emoji": "👓",
      "code": ":eyeglasses:",
      "description": "関連の変更"
    },
    {
      "emoji": "📈",
      "code": ":chart_with_upwards_trend:",
      "description": "メトリクスやログの追加/改善"
    }
  ],
  "cSpell.ignorePaths": [
    ".vscode",
    ".devcontainer/devcontainer.json",
    ".golangci.toml"
  ],
  "errorLens.excludeBySource": ["cSpell"],
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#05848b",
    "activityBar.background": "#05848b",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#fb84f4",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#05848b",
    "statusBar.background": "#03555a",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#05848b",
    "statusBarItem.remoteBackground": "#03555a",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#03555a",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#03555a99",
    "titleBar.inactiveForeground": "#e7e7e799"
  }
}
